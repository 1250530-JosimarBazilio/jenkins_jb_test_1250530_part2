        {
            "name": "v1 - Legacy Endpoints",
            "item": [
                {
                    "name": "Create Book (v1)",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "// Generate a random ISBN-13",
                                    "var prefix = '978';",
                                    "var random = '';",
                                    "for (var i = 0; i < 9; i++) {",
                                    "    random += Math.floor(Math.random() * 10);",
                                    "}",
                                    "var isbn12 = prefix + random;",
                                    "",
                                    "// Calculate check digit",
                                    "var sum = 0;",
                                    "for (var i = 0; i < 12; i++) {",
                                    "    sum += parseInt(isbn12[i]) * (i % 2 === 0 ? 1 : 3);",
                                    "}",
                                    "var checkDigit = (10 - (sum % 10)) % 10;",
                                    "",
                                    "pm.collectionVariables.set('isbn', isbn12 + checkDigit);"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Book created successfully', function() {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test('Response has ISBN', function() {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.isbn).to.exist;",
                                    "});",
                                    "",
                                    "pm.test('ETag header present', function() {",
                                    "    pm.response.to.have.header('ETag');",
                                    "    var etag = pm.response.headers.get('ETag');",
                                    "    pm.collectionVariables.set('bookVersion', etag);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
